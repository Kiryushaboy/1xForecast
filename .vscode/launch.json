{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Flutter Web (Hot Reload)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-port",
                "8080",
                "--web-hostname",
                "0.0.0.0"
            ],
            "flutterMode": "debug",
            "env": {
                "FLUTTER_WEB_AUTO_DETECT": "true"
            }
        },
        {
            "name": "Flutter Web (Chrome)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "8080"
            ],
            "flutterMode": "debug"
        }
    ]
}